<resources>
    <!-- Power menu animations -->
    <style name="GlobalActionsAnimation">
        <item name="windowEnterAnimation">@anim/slide_in_up</item>
        <item name="windowExitAnimation">@anim/slide_out_down</item>
    </style>
    <style name="GlobalActionsAnimationTop">
        <item name="windowEnterAnimation">@anim/slide_in_down</item>
        <item name="windowExitAnimation">@anim/slide_out_up</item>
    </style>
    <style name="GlobalActionsAnimationEnter">
        <item name="windowEnterAnimation">@anim/dialog_enter</item>
        <item name="windowExitAnimation">@anim/dialog_exit</item>
</resources>
